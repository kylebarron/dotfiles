# SSH Aliases

alias ssh-google="ssh kyle@104.196.112.154 -L8888:localhost:8888"
alias ssh-reverse="ssh -f -N -T -R22222:localhost:22 -R8787:localhost:8787 -R8888:localhost:8888 kyle@104.196.112.154"

function jupyter-mit() {
    ssh -L 7001:node${1}.eth.cluster:7001 -N barronk@eosloan.mit.edu
}
alias mit-jupyter=jupyter-mit
function ssh-mit() {
    ssh -Y ${1} barronk@eosloan.mit.edu
}
function ssh-home() {
    ssh -Y ${1} kyle@kylebarron.ddns.net
}

function ssh-age() {
    ssh -Y -L 8888:localhost:8888 \
        barronk@age${1}.nber.org
}

function age-rstudio() {
   ssh -N -L 882${1}:localhost:8787 \
        barronk@age${1}.nber.org
}

function ssh-nber() {
    ssh -Y ${2} barronk@${1}.nber.org
}

alias vpn-nber="cd /opt/forti && ./forti_cli --server vpn.nber.org:10443 --vpnuser barronk --keepalive"
alias nber-vpn=vpn-nber
alias scale-hdmi="xrandr --output HDMI-0 --scale 1.65x1.65"
alias scale-dvi="xrandr --output DVI-I-1 --scale 1.65x1.65"
alias scale="scale-hdmi && scale-dvi"
alias dp-normal="xrandr --output DP-2 --rotate normal"
alias dp-rotate="xrandr --output DP-2 --rotate left"
alias rotate-dp=dp-rotate
alias normal-dp=dp-normal

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

