# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases

# ---------------------------------------------------------------------
# Useful

export mtex=`kpsewhich -var-value=TEXMFHOME`

# Options
set noclobber

# ls and dir
alias ls='ls -v --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# some more ls aliases
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -lhF'
alias l.='ls -d .*'

# Random aliases to prevent accidental deletes/overwrites
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# PS aliases
#alias psg='ps -ax | grep \!* | grep -v grep'
alias topme='top -c -u `whoami`'
alias psme='ps aux | grep `whoami`'

# check out CSV file in buffer
function lesscsv () {
    column -s, -t < $1 | less -#2 -N -S
}

# Other shortcuts
alias clip="xclip -sel clip"
alias nano="micro"

alias gpg=gpg2
alias bfg="java -jar /opt/bfg/bfg-1.12.15.jar"
eval "$(hub alias -s)"
alias stata="/opt/stata/xstata"

# Get memory used by program
function memll() {
    echo "Memory taken up by $1 :"
    smem -t -k -P $1
}

function memls() {
    smem -t -k -c pss -P $1 | tail -n 1
    echo "This is the memory used by $1"
}

# Directory size
function mdu() {
    du -h $1 --apparent-size --max-depth=1
}

